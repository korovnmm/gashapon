{
  "name": "gashapon",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@emotion/react": "^11.5.0",
    "@emotion/styled": "^11.3.0",
    "@mui/material": "^5.0.6",
    "@mui/x-data-grid": "^5.0.0-beta.7",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "firebase": "^9.6.7",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-firebase-hooks": "^4.0.1",
    "react-router-dom": "^5.3.0",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "start": "run-p --race start:react start:firebase",
    "start:react": "react-scripts start",
    "start:firebase": "firebase emulators:start --only functions,auth,firestore",

    "build": "react-scripts build",
    "test": "firebase emulators:exec \"react-scripts test\"",
    "eject": "react-scripts eject",
    
    "func-lint": "npm --prefix \"./functions\" run lint-fix",
    "func-compile": "npm --prefix \"./functions\" run build",
    "func": "npm run func-lint && npm run func-compile && firebase serve --only functions -p 5001"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/jest": "^27.4.0",
    "npm-run-all": "^4.1.5"
  }
}
